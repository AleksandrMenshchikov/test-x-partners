{
  "compilerOptions": {
    "target": "es2017",
    "module": "node16",
    "baseUrl": "./src",
    "moduleResolution": "node16",
    "allowJs": true,
    "checkJs": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/shared/@types", "../../node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
